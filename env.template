# Alpha Co-Pilot Environment Variables Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# REQUIRED: Azure OpenAI Configuration
# =============================================================================
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
AZURE_OPENAI_ENDPOINT=https://your-resource-name.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT_NAME=o4-mini
AZURE_OPENAI_API_VERSION=2025-01-01-preview

# =============================================================================
# REQUIRED: Flask Settings
# =============================================================================
FLASK_SECRET_KEY=your_super_secret_flask_key_change_this_in_production
FLASK_ENV=production
FLASK_DEBUG=False

# =============================================================================
# OPTIONAL: Google Gemini (Enhanced Analysis)
# =============================================================================
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.5-flash

# =============================================================================
# OPTIONAL: Social Media Integration
# =============================================================================
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your_webhook_url

# =============================================================================
# OPTIONAL: Premium Data Sources
# =============================================================================
CMC_API_KEY=your_coinmarketcap_pro_api_key
CMC_BASE_URL=https://pro-api.coinmarketcap.com/v1

# =============================================================================
# DEPLOYMENT SETTINGS
# =============================================================================
PORT=5000
PYTHONPATH=/app
